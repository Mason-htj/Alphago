<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    tools:context="com.alphago.alphago.activity.GameWordActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="196dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_qst"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="205dp"
        android:layout_height="230dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_qst"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/teacher"/>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="310dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/game_qst"
        app:layout_constraintRight_toLeftOf="@+id/btn_wordgame_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_img"/>

    <Button
        android:id="@+id/btn_wordgame_exit"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/button_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_wordgame_next"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/button_next"
        app:layout_constraintRight_toRightOf="@+id/btn_wordgame_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/game_qst"
        android:layout_width="0dp"
        android:layout_height="91dp"
        android:layout_marginEnd="38dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="44dp"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@drawable/tv_qst"/>

    <ImageView
        android:id="@+id/img_wordgame_ast"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_wordgame_ex2"
        app:layout_constraintLeft_toLeftOf="@+id/btn_wordgame_ex2"
        app:layout_constraintRight_toLeftOf="@+id/btn_wordgame_ex2"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:srcCompat="@mipmap/ic_launcher"/>

    <Button
        android:id="@+id/btn_wordgame_ex1"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:background="@drawable/button_ex"
        android:text="example1"
        app:layout_constraintBottom_toTopOf="@+id/btn_wordgame_ex3"
        app:layout_constraintLeft_toLeftOf="@+id/imageView3"
        app:layout_constraintRight_toLeftOf="@+id/btn_wordgame_ex2"/>

    <Button
        android:id="@+id/btn_wordgame_ex3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_ex"
        android:text="example3"
        app:layout_constraintBottom_toBottomOf="@+id/btn_wordgame_ex4"
        app:layout_constraintLeft_toLeftOf="@+id/btn_wordgame_ex1"
        app:layout_constraintRight_toRightOf="@+id/btn_wordgame_ex1"
        app:layout_constraintTop_toTopOf="@+id/btn_wordgame_ex4" />

    <Button
        android:id="@+id/btn_wordgame_ex2"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:background="@drawable/button_ex"
        android:text="example2"
        app:layout_constraintBottom_toTopOf="@+id/btn_wordgame_ex4"
        app:layout_constraintLeft_toRightOf="@+id/btn_wordgame_ex3"
        app:layout_constraintRight_toRightOf="@+id/imageView3"/>

    <Button
        android:id="@+id/btn_wordgame_ex4"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_ex"
        android:text="example4"
        app:layout_constraintBottom_toBottomOf="@id/imageView3"
        app:layout_constraintLeft_toLeftOf="@+id/btn_wordgame_ex2"
        app:layout_constraintRight_toRightOf="@+id/btn_wordgame_ex2" />

</android.support.constraint.ConstraintLayout>
